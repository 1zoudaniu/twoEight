<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login_bg"
    tools:context="zou.te.happy.com.happyte.activitys.LoginForgetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/forget_tv_tel"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/bg_login_bg_two"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="手机号码："
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/forget_edit_tel"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/forget_tv_tel"
                android:background="#ffffff"
                android:digits="0123456789"
                android:hint="请输入手机号码"
                android:lines="1"
                android:maxLength="11"
                android:paddingLeft="4dp"
                android:textColor="#343f4a"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/forget_tv_yzm"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/bg_login_bg_two"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="验 证 码："
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/forget_edit_yzm"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/forget_tv_yzm"
                android:background="#ffffff"
                android:digits="0123456789"
                android:hint="请输入验证码"
                android:lines="1"
                android:maxLength="11"
                android:paddingLeft="4dp"
                android:textColor="#343f4a"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/forget_text_getYzm"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/forget_edit_yzm"
                android:background="@color/bg_login_bg_two"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/forget_tv_password"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/bg_login_bg_two"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="密        码："
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/forget_edit_password"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/forget_tv_password"
                android:background="#ffffff"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="18"
                android:paddingLeft="4dp"
                android:textColor="#343f4a"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#ffffff">

            <Button
                android:id="@+id/forget_btn_login"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/bg_login_bg_two"
                android:text="重 置 密 码"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
