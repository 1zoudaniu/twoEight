<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login_bg"
    android:orientation="vertical"
    tools:context="zou.te.happy.com.happyte.activitys.LoginRegisterActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_login_bg_two" />

    <RelativeLayout
        android:id="@+id/register_rl_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_login_bg_two">

        <ImageView
            android:id="@+id/login_iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/login_iv_back"
            android:gravity="center"
            android:text="注册新账户"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <!--手机号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/register_tv_tel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_tel" />

        <EditText
            android:id="@+id/register_edit_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/register_tv_tel"
            android:background="@null"
            android:digits="0123456789"
            android:hint="请输入手机号码"
            android:lines="1"
            android:maxLength="11"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_login_bg_two" />

    <!--验证码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/register_tv_yzm"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_yzm" />

        <EditText
            android:id="@+id/register_edit_yzm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/register_tv_yzm"
            android:background="@null"
            android:digits="0123456789"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="4"
            android:paddingLeft="4dp"
            android:textColor="#343f4a"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/register_text_getYzm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="#0037ff"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_login_bg_two" />

    <!--密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/register_tv_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd" />

        <EditText
            android:id="@+id/register_edit_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/register_tv_password"
            android:background="@null"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="18"
            android:paddingLeft="4dp"
            android:textColor="#343f4a"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_login_bg_two" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/register_btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_coner_loginexp_bg"
            android:text="立 即 注 册"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>
